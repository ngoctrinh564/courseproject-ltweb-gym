@model gym.Data.Package

@{
    ViewData["Title"] = "Tạo gói tập";

    if (User.IsInRole("Admin"))
    {
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
    else if (User.IsInRole("Staff"))
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}

<h2 class="mb-4 text-primary fw-bold">➕ Tạo gói tập mới</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" class="border rounded p-4 shadow-sm bg-light">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label fw-semibold"></label>
                <input asp-for="Name" class="form-control" placeholder="Nhập tên gói tập" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Type" class="form-label fw-semibold"></label>
                <select asp-for="Type" class="form-select">
                    <option disabled selected>-- Chọn loại gói --</option>
                    <option>Tiêu chuẩn</option>
                    <option>Huấn luyện cá nhân</option>
                    <option>Nhóm</option>
                    <option>Huấn luyện nhóm</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Price" class="form-label fw-semibold"></label>
                <input asp-for="Price" class="form-control" placeholder="VD: 500000" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="DurationInDays" class="form-label fw-semibold"></label>
                <input asp-for="DurationInDays" class="form-control" placeholder="VD: 30" />
                <span asp-validation-for="DurationInDays" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Description" class="form-label fw-semibold"></label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Mô tả ngắn gọn..."></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            @* Hidden isActive mặc định true *@
            <input type="hidden" asp-for="IsActive" value="true" />

            <div class="form-group d-flex justify-content-between">
                <a asp-action="Admin" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i> Quay lại danh sách
                </a>
                <input type="submit" value="Lưu gói tập" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
