@model gym.Data.Package

@{
    ViewData["Title"] = "Chi tiết gói tập";

    if (User.IsInRole("Admin"))
    {
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
    else if (User.IsInRole("Staff"))
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}

<h2 class="mb-4 text-primary fw-bold">📄 Chi tiết gói tập</h2>

<div class="card shadow-sm border-0 mb-4">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-4 text-secondary fw-semibold">Tên gói</dt>
            <dd class="col-sm-8">@Model.Name</dd>

            <dt class="col-sm-4 text-secondary fw-semibold">Loại gói</dt>
            <dd class="col-sm-8">@Model.Type</dd>

            <dt class="col-sm-4 text-secondary fw-semibold">Giá</dt>
            <dd class="col-sm-8">@String.Format("{0:N0} VNĐ", Model.Price)</dd>

            <dt class="col-sm-4 text-secondary fw-semibold">Thời hạn</dt>
            <dd class="col-sm-8">@Model.DurationInDays ngày</dd>

            <dt class="col-sm-4 text-secondary fw-semibold">Mô tả</dt>
            <dd class="col-sm-8">@Model.Description</dd>

            <dt class="col-sm-4 text-secondary fw-semibold">Trạng thái</dt>
            <dd class="col-sm-8">
                @if (Model.IsActive)
                {
                    <span class="badge bg-success">Đang mở</span>
                }
                else
                {
                    <span class="badge bg-danger">Đã đóng</span>
                }
            </dd>
        </dl>
    </div>
</div>

<div class="d-flex justify-content-between">
    <a asp-action="Admin" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-1"></i> Quay lại danh sách
    </a>

    <a asp-action="Edit" asp-route-id="@Model.PackageId" class="btn btn-warning">
        <i class="fas fa-pen-to-square me-1"></i> Sửa gói
    </a>
</div>
