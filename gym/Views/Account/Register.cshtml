@model RegisterDto
@{
    ViewData["Title"] = "Đăng ký hội viên";
}

<div class="container py-5 register-wrapper">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 rounded-4 p-4 p-md-5 bg-white animate__animated animate__fadeIn">
                <div class="text-center mb-4">
                    <h2 class="text-primary fw-bold">Đăng ký hội viên mới</h2>
                    <p class="text-muted">Hãy điền đầy đủ thông tin bên dưới để tạo tài khoản</p>
                </div>

                <form asp-action="Register" method="post" class="needs-validation" novalidate>
                    <div asp-validation-summary="All" class="text-danger small mb-3"></div>
                    <div class="row g-3">
                        <!-- Họ tên -->
                        <div class="col-md-6">
                            <label asp-for="FullName" class="form-label fw-semibold"></label>
                            <input asp-for="FullName" class="form-control rounded-3" required />
                            <span asp-validation-for="FullName" class="text-danger small"></span>
                        </div>

                        <!-- Ngày sinh -->
                        <div class="col-md-6">
                            <label asp-for="DateOfBirth" class="form-label fw-semibold"></label>
                            <input asp-for="DateOfBirth" type="date" class="form-control rounded-3" required />
                            <span asp-validation-for="DateOfBirth" class="text-danger small"></span>
                        </div>

                        <!-- Giới tính -->
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Giới tính</label>
                            <div class="d-flex gap-3 mt-1">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" asp-for="Sex" value="true" checked />
                                    <label class="form-check-label">Nam</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" asp-for="Sex" value="false" />
                                    <label class="form-check-label">Nữ</label>
                                </div>
                            </div>
                            <span asp-validation-for="Sex" class="text-danger small"></span>
                        </div>

                        <!-- Số điện thoại -->
                        <div class="col-md-6">
                            <label asp-for="Phone" class="form-label fw-semibold"></label>
                            <input asp-for="Phone" class="form-control rounded-3" required />
                            <span asp-validation-for="Phone" class="text-danger small"></span>
                        </div>

                        <!-- Email -->
                        <div class="col-md-6">
                            <label asp-for="Email" class="form-label fw-semibold"></label>
                            <input asp-for="Email" class="form-control rounded-3" required />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <!-- Tên đăng nhập -->
                        <div class="col-md-6">
                            <label asp-for="UserName" class="form-label fw-semibold"></label>
                            <input asp-for="UserName" class="form-control rounded-3" required />
                            <span asp-validation-for="UserName" class="text-danger small"></span>
                        </div>

                        <!-- Mật khẩu -->
                        <div class="col-md-6">
                            <label asp-for="Password" class="form-label fw-semibold"></label>
                            <input asp-for="Password" class="form-control rounded-3" type="password" required />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <!-- Nhập lại mật khẩu -->
                        <div class="col-md-6">
                            <label asp-for="ConfirmPassword" class="form-label fw-semibold">Nhập lại mật khẩu</label>
                            <input asp-for="ConfirmPassword" class="form-control rounded-3" type="password" required />
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <!-- Địa chỉ -->
                        <div class="col-md-12">
                            <label class="form-label fw-semibold">Địa chỉ</label>
                            @await Html.PartialAsync("~/Views/Shared/Components/_AddressSelectionPartial.cshtml", Model)
                            <span asp-validation-for="Address" class="text-danger small"></span>
                        </div>

                        <!-- Nút đăng ký -->
                        <div class="col-md-12 text-center mt-4">
                            <button type="submit" class="btn btn-primary px-5 py-2 fw-semibold">Đăng ký</button>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            if (window.initializeAddressSelection) {
                window.initializeAddressSelection();
            }
        });
    </script>
}
