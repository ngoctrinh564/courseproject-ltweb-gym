@model OtpVerificationDto
@{
    ViewData["Title"] = "Xác nhận mã OTP - Quên mật khẩu";
}

<div class="container mt-5" style="max-width: 500px;">
    <div class="card shadow-sm border-0 rounded-4 animate__animated animate__fadeIn">
        <div class="card-body p-4">
            <h3 class="card-title text-center text-primary fw-bold mb-3">Xác nhận quên mật khẩu</h3>
            <p class="text-center text-muted">
                Mã OTP đã được gửi đến email <strong>@Model.Email</strong>. <br />
                Vui lòng nhập mã để xác nhận đặt lại mật khẩu.
            </p>

            <form asp-action="VerifyOtpForgotPassword" method="post">
                <div asp-validation-summary="All" class="text-danger small mb-2"></div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-semibold">Email</label>
                    <input asp-for="Email" class="form-control" readonly />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="OtpCode" class="form-label fw-semibold">Mã OTP</label>
                    <input asp-for="OtpCode"
                           class="form-control text-center rounded-3 fw-bold fs-5"
                           maxlength="6"
                           placeholder="Nhập mã OTP"
                           autocomplete="off"
                           required />
                    <span asp-validation-for="OtpCode" class="text-danger small"></span>
                </div>

                <div class="d-grid mt-4">
                    <button type="submit" class="btn btn-success fw-semibold py-2">Xác nhận</button>
                </div>
            </form>

            <div class="text-center mt-3">
                <small class="text-muted">Không nhận được mã? <a asp-action="ResendOtp" asp-route-email="@Model.Email" class="text-decoration-none text-primary fw-semibold">Gửi lại</a></small>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
