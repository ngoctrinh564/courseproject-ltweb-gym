@{
    ViewData["Title"] = "Đặt lại mật khẩu";
    var email = ViewBag.Email as string;
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow p-4" style="max-width: 500px; width: 100%;">
        <h3 class="text-center text-primary mb-4">🔒 Đặt lại mật khẩu</h3>

        <form asp-action="ResetPassword" method="post">
            @if (!string.IsNullOrEmpty(email))
            {
                <input type="hidden" name="email" value="@email" />
            }

            <div class="mb-3">
                <label for="newPassword" class="form-label">Mật khẩu mới</label>
                <input type="password" name="newPassword" class="form-control" placeholder="Nhập mật khẩu mới" required />
            </div>

            <div class="mb-3">
                <label for="confirmPassword" class="form-label">Xác nhận mật khẩu</label>
                <input type="password" name="confirmPassword" class="form-control" placeholder="Xác nhận lại mật khẩu" required />
            </div>

            <div asp-validation-summary="All" class="text-danger mb-2"></div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-success">✅ Cập nhật mật khẩu</button>
                <a asp-action="Login" class="btn btn-outline-secondary">← Quay lại đăng nhập</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}