@model gym.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Trang Chủ";
}

<!-- Carousel ảnh đầu trang -->
<div id="mainCarousel" class="carousel slide mb-5" data-bs-ride="carousel">
    <div class="carousel-inner">
        @for (int i = 1; i <= 4; i++)
        {
            <div class="carousel-item @(i == 1 ? "active" : "")">
                <img src="~/images/Content/slide@(i).jpg"
                     class="d-block w-100"
                     style="height: 400px; object-fit: cover; object-position: center; border-radius: 6px; box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);"
                     alt="Slide @(i)" />
            </div>
        }
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#mainCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#mainCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
    </button>
</div>

<!-- Tính năng nổi bật -->
<section class="container py-5">
    <h2 class="text-center mb-4 section-title">Tính Năng Nổi Bật</h2>
    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <div class="p-4 border rounded shadow h-100">
                <div class="feature-icon">💪</div>
                <h5 class="mt-3">Lịch Tập Linh Hoạt</h5>
                <p>Tùy chỉnh lịch tập theo thời gian và nhu cầu cá nhân.</p>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="p-4 border rounded shadow h-100">
                <div class="feature-icon">📊</div>
                <h5 class="mt-3">Quản Lý Tiến Độ</h5>
                <p>Theo dõi và đánh giá hiệu quả tập luyện dễ dàng.</p>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="p-4 border rounded shadow h-100">
                <div class="feature-icon">🏋️</div>
                <h5 class="mt-3">Hỗ Trợ Liên Tục</h5>
                <p>Hệ thống hỗ trợ bạn mọi lúc trong hành trình tập luyện.</p>
            </div>
        </div>
    </div>
</section>

<!-- Gói tập mới nhất -->
<section class="bg-light py-5">
    <div class="container">
        <h2 class="text-center mb-4 section-title">Gói Tập Mới Nhất</h2>
        <div class="row">
            @foreach (var package in Model.LatestPackages)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body text-center">
                            <h5 class="text-primary fw-bold mb-2">@package.Name</h5>
                            <p class="text-muted mb-3">@package.Description</p>
                            <p class="fw-bold">@string.Format("{0:N0}", package.Price) VNĐ</p>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="text-center mt-3">
            <a class="btn btn-primary" href="/Packages/Index">Xem tất cả gói tập</a>
        </div>
    </div>
</section>

<!-- Huấn luyện viên -->
<section class="container py-5">
    <h2 class="text-center mb-4 section-title">Đội Ngũ Huấn Luyện Viên</h2>
    <div class="row">
        @foreach (var trainer in Model.Trainers)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="@Url.Content("" + trainer.Image)"
                         class="card-img-top"
                         style="height: 250px; object-fit: cover; border-top-left-radius: 6px; border-top-right-radius: 6px;"
                         alt="@trainer.FullName" />
                    <div class="card-body text-center">
                        <h5 class="text-primary fw-bold mb-2">@trainer.FullName</h5>
                        <p class="text-muted">@trainer.Specialty</p>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
