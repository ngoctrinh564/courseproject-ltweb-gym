@model gym.Data.Notification

@if (Model == null)
{
    <div class="text-danger">Không tìm thấy thông báo.</div>
}
else
{
    <div>
        <h5 class="fw-bold text-primary">@Model.Title</h5>
        <p class="mt-3">@Model.Content</p>
        <div class="text-end">
            <small class="text-muted">🕒 Gửi lúc: @Model.CreatedAt?.ToString("HH:mm dd/MM/yyyy")</small>
        </div>
    </div>
}
