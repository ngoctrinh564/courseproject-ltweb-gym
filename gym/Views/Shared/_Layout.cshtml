    @section Scripts {
        <script>
            $(function () {
                let modalInstance;

                $(document).on("click", ".notification-item", function () {
                    const id = $(this).data("id");

                    // Chỉ gọi 1 lần, tránh nhiều click giật lag
                    $.post("/Notification/MarkAsSeen", { id }, function (html) {
                        $("#notificationModalContent").html(html);

                        // Không tạo mới nếu đã có modal instance
                        const modalEl = document.getElementById("notificationModal");
                        modalInstance = bootstrap.Modal.getOrCreateInstance(modalEl);

                        // Show nhẹ nhàng sau khi DOM sẵn sàng
                        setTimeout(() => {
                            modalInstance.show();
                        }, 10);
                    });
                });
            });
        </script>
    }
</head>
