@model IEnumerable<gym.Data.Feedback>

@{
    ViewData["Title"] = "Phản hồi của tôi";
}

<div class="container mt-5" style="max-width: 1000px;">
    <div class="card shadow rounded-4">
        <div class="card-body p-4">
            <h3 class="mb-4 text-primary text-center">
                <i class="bi bi-chat-dots-fill"></i> Phản hồi của bạn
            </h3>

            @if (ViewData["Error"] != null)
            {
                <div class="alert alert-danger">@ViewData["Error"]</div>
            }
            else if (!Model.Any())
            {
                <div class="alert alert-warning text-center py-4">
                    <i class="bi bi-exclamation-circle fs-4"></i><br />
                    Bạn chưa gửi phản hồi nào.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle text-center">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 20%;"><i class="bi bi-clock-history"></i> Thời gian</th>
                                <th><i class="bi bi-chat-left-text"></i> Nội dung phản hồi</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var fb in Model)
                            {
                                <tr>
                                    <td class="text-muted">@fb.ThoiGian.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td class="text-start">@fb.Content</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }

            <div class="text-center mt-4">
                <a asp-action="Create" class="btn btn-outline-primary rounded-pill px-4">
                    <i class="bi bi-plus-circle"></i> Gửi phản hồi mới
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
}
