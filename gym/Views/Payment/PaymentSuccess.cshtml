@model Payment
@{
    ViewData["Title"] = "Thanh toán thành công";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg p-5 rounded-4 text-center">
        <div class="text-success mb-3">
            <i class="bi bi-check-circle-fill" style="font-size: 5rem;"></i>
        </div>

        <h2 class="text-success fw-bold mb-4">Thanh toán thành công!</h2>

        <div class="row justify-content-center">
            <div class="col-md-6">
                <table class="table table-borderless table-sm text-start">
                    <tr>
                        <th>Mã thanh toán:</th>
                        <td>@Model.PaymentId</td>
                    </tr>
                    <tr>
                        <th>Tổng tiền:</th>
                        <td class="text-success fw-bold">@Model.Total.ToString("N0") VND</td>
                    </tr>
                    <tr>
                        <th>Phương thức:</th>
                        <td>@Model.Method</td>
                    </tr>
                    <tr>
                        <th>Ngày thanh toán:</th>
                        <td>@DateTime.Now.ToString("dd/MM/yyyy HH:mm")</td>
                    </tr>
                </table>
            </div>
        </div>

        <div class="mt-4">
            <a href="/" class="btn btn-primary btn-lg px-4">
                <i class="bi bi-house-door-fill me-2"></i>Về trang chủ
            </a>
        </div>
    </div>
</div>
